{
  "version": "0.0.1",
  "configurations": [
    {
      "name": "backend",
      "runtimeExecutable": "python3",
      "runtimeArgs": ["api_main.py"],
      "port": 8000
    },
    {
      "name": "frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev", "--prefix", "frontend"],
      "port": 5173
    },
    {
      "name": "frontend-preview",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["serve", "frontend/dist", "-l", "4173", "-s"],
      "port": 4173
    }
  ]
}
